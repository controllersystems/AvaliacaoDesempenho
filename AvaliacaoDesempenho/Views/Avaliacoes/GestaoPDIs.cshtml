@using AvaliacaoDesempenho.Dominio.BusinessEntities

@model AvaliacaoDesempenho.Models.Avaliacoes.GestaoPDIsViewModel

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<section id="bread">
    <ul class="breadcrumb">
        <li>@Html.ActionLink("Administração", "Index", "Home")<span class="divider"></span></li>
        <li>@Html.ActionLink("Gerenciamento de Ciclos de Avaliação", "GestaoCiclosAvaliacao", "CiclosAvaliacao")<span class="divider"></span></li>
        <li class="active">Gerenciar PDI</li>
        <li class="pull-right">@Html.ActionLink("Sair", "LogOff", "Autenticacao")</li>
    </ul>
</section>

<div class="row">
    <div class="col-md-025">
        <label class="control-label">
            Descrição do Ciclo de Avaliação:
        </label>
    </div>
    <div class="col-md-075">
        <label class="control-label">
            @Model.CicloAvaliacaoDescricao
        </label>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-100">
        <label class="control-label">
            Relação de Avaliações
        </label>
    </div>
</div>
@using (Html.BeginForm("PesquisarPDIs",
                       "Avaliacoes",
                       FormMethod.Post,
                       new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
    
    @Html.HiddenFor(model => Model.CicloAvaliacaoSelecionadoID)

    <div class="row top20">
        <div class="col-md-015">
            @Html.LabelFor(model => model.NomeAvaliadoPesquisado, new { @class = "control-label" })
        </div>
        <div class="col-md-035">
            @Html.EditorFor(model => model.NomeAvaliadoPesquisado, new { @class = "form-control" })
        </div>
        <div class="col-md-010 col-md-offset-005">
            @Html.LabelFor(model => model.StatusPDI, new { @class = "control-label" })
        </div>
        <div class="col-md-035">
            @Html.DropDownListFor(model => model.StatusPDIPesquisadoID,
                                  new SelectList(Model.StatusPDI,
                                                 "Value",
                                                 "Text",
                                                 Model.StatusPDIPesquisadoID),
                                                 "",
                                  new { @class = "form-control" })
        </div>
    </div>
    <div class="row top20">
        <div class="col-md-005">
            @Html.LabelFor(model => model.AreaPesquisada, new { @class = "control-label" })
        </div>
        <div class="col-md-025">
            @Html.EditorFor(model => model.AreaPesquisada, new { @class = "form-control" })
        </div>
        <div class="col-md-005 col-md-offset-001">
            @Html.LabelFor(model => model.CargoPesquisado, new { @class = "control-label" })
        </div>
        <div class="col-md-025">
            @Html.EditorFor(model => model.CargoPesquisado, new { @class = "form-control" })
        </div>
        <div class="col-md-005 col-md-offset-001">
            @Html.LabelFor(model => model.GestorPesquisado, new { @class = "control-label" })
        </div>
        <div class="col-md-025">
            @Html.EditorFor(model => model.GestorPesquisado, new { @class = "form-control" })
        </div>
        <div class="col-md-010">
            <input type="submit" value="Pesquisar" class="btn btn-default" />
        </div>
    </div>
}
<div class="row top30">
    <div class="row top20">
        <div class="col-md-100">
            <table class="table">
                <tr>
                    <th>
                        Gestor
                    </th>
                    <th>
                        Área
                    </th>
                    <th>
                        Avaliado
                    </th>
                    <th>
                        Cargo
                    </th>
                    <th>
                        Status
                    </th>
                </tr>

                @if (Model.AvaliacoesPDIsColaboradores != null && Model.AvaliacoesPDIsColaboradores.Any())
                {
                    for (int i = 0; i < Model.AvaliacoesPDIsColaboradores.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Model.AvaliacoesPDIsColaboradores[i].NomeGestor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.AvaliacoesPDIsColaboradores[i].Area)
                            </td>
                            <td>
                                @if (Model.AvaliacoesPDIsColaboradores[i].StatusPDIID.Equals((int)Enumeradores.StatusPDI.Aprovada))
                                {
                                    @Html.ActionLink(Model.AvaliacoesPDIsColaboradores[i].UsuarioNome, "ManterAvaliacaoPDIColaborador", new { id = Model.CicloAvaliacaoSelecionadoID, colaboradorID = Model.AvaliacoesPDIsColaboradores[i].ID })
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => Model.AvaliacoesPDIsColaboradores[i].UsuarioNome)
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.AvaliacoesPDIsColaboradores[i].Cargo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model.AvaliacoesPDIsColaboradores[i].StatusPDINome)
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>