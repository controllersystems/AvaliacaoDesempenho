@model AvaliacaoDesempenho.Models.Relatorios.GapCompetenciasViewModel
@{
    ViewBag.Title = "Relatório Gap de Competências";
    ViewBag.Ciclo = Model.CicloSelecionado;
    Layout = "~/Views/Shared/_LayoutRelatorio.cshtml";
}

<h4>Ano de Referência: @Model.AnoReferencia</h4>
@using (Html.BeginForm("PesquisarGapCompetencias",
                       "Relatorios",
                       FormMethod.Post,
                       new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })

    @Html.HiddenFor(model => model.CicloSelecionado)

    <div class="row top20">
        <div class="col-md-015">
            @Html.LabelFor(model => model.DiretoriaPesquisada, new { @class = "control-label" })
        </div>
        <div class="col-md-035">
            @Html.EditorFor(model => model.DiretoriaPesquisada, new { @class = "form-control" })
        </div>
        <div class="col-md-015">
            @Html.LabelFor(model => model.AreaPesquisada, new { @class = "control-label" })
        </div>
        <div class="col-md-035">
            @Html.EditorFor(model => model.AreaPesquisada, new { @class = "form-control" })
        </div>
    </div>
    <div class="row top20">
        <div class="col-md-015">
            @Html.LabelFor(model => model.GestorPesquisado, new { @class = "control-label" })
        </div>
        <div class="col-md-035">
            @Html.EditorFor(model => model.GestorPesquisado, new { @class = "form-control" })
        </div>
        <div class="col-md-015">
            @Html.LabelFor(model => model.ColaboradorPesquisado, new { @class = "control-label" })
        </div>
        <div class="col-md-035">
            @Html.EditorFor(model => model.ColaboradorPesquisado, new { @class = "form-control" })
        </div>
    </div>
    <div class="row top20">
        <div class="col-md-015">
            @Html.LabelFor(model => model.CargoPesquisado, new { @class = "control-label" })
        </div>
        <div class="col-md-035">
            @Html.EditorFor(model => model.CargoPesquisado, new { @class = "form-control" })
        </div>
    </div>
    <div class="row top20">
        <div class="col-md-095 col-md-offset-005 text-right">
            <input type="submit" value="Pesquisar" class="btn btn-default" />
        </div>
    </div>
}
<div class="row top30">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    Diretoria
                </th>
                <th>
                    Area
                </th>
                <th>
                    Gestor
                </th>
                <th>
                    Nome do Colaborador
                </th>
                <th>
                    Matrícula
                </th>
                <th>
                    Cargo
                </th>
                <th>
                    Tipo de Competência 
                </th>
                <th>
                    Nome da Competência 
                </th>
                <th>
                    Nível Requerido 
                </th>
                <th>
                    Nível Avaliado pelo Gestor
                </th>
                <th>
                    Campo Gap
                </th>
            </tr>
            @if (Model.ListaGapCompetencias != null &&
                Model.ListaGapCompetencias.Any())
            {
                for (int i = 0; i < Model.ListaGapCompetencias.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.ListaGapCompetencias[i].Diretoria
                        </td>
                        <td>
                            @Model.ListaGapCompetencias[i].Area
                        </td>
                        <td>
                            @Model.ListaGapCompetencias[i].Gestor
                        </td>
                        <td>
                            @Model.ListaGapCompetencias[i].NomeColaborador
                        </td>
                        <td>
                            @Model.ListaGapCompetencias[i].Matricula
                        </td>
                        <td>
                            @Model.ListaGapCompetencias[i].Cargo
                        </td>
                        <td>
                            @Model.ListaGapCompetencias[i].TipoCompetencia
                        </td>
                        <td>
                            @Model.ListaGapCompetencias[i].NomeCompetencia
                        </td>
                        <td>
                            @Model.ListaGapCompetencias[i].NivelRequirido
                        </td>
                        <td>
                            @Model.ListaGapCompetencias[i].NivelAvaliadoGestor
                        </td>
                        <td>
                            @Model.ListaGapCompetencias[i].CampoGap
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>
