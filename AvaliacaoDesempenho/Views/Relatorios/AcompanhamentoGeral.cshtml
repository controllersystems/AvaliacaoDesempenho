
@model AvaliacaoDesempenho.Models.Relatorios.AcompanhamentoGeralViewModel

@{
    ViewBag.Title = "Relatório de Acompanhamento do Processo AD";
    Layout = "~/Views/Shared/_LayoutRelatorio.cshtml";
}

<h2>Ano de Referência: @Model.AnoReferencia</h2>

<div class="row top30">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    Diretoria
                </th>
                <th>
                    Area
                </th>
                <th>
                    Gestor
                </th>
                <th>
                    Nome do Colaborador
                </th>
                <th>
                    Matrícula
                </th>
                <th>
                    Cargo
                </th>
                <th>
                    Status do Processo
                </th>
                <th>
                    Data da última alteração
                </th>
            </tr>
            @if(Model.ListaAcompanhamentoGeral != null &&
                Model.ListaAcompanhamentoGeral.Any())
            {
                for (int i = 0; i < Model.ListaAcompanhamentoGeral.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.ListaAcompanhamentoGeral[i].Diretoria
                        </td>
                        <td>
                            @Model.ListaAcompanhamentoGeral[i].Area
                        </td>
                        <td>
                            @Model.ListaAcompanhamentoGeral[i].Gestor
                        </td>
                        <td>
                            @Model.ListaAcompanhamentoGeral[i].NomeColaborador
                        </td>
                        <td>
                            @Model.ListaAcompanhamentoGeral[i].Matricula
                        </td>
                        <td>
                            @Model.ListaAcompanhamentoGeral[i].Cargo
                        </td>
                        <td>
                            @Model.ListaAcompanhamentoGeral[i].StatusAvaliacao
                        </td>
                        <td>
                            @Model.ListaAcompanhamentoGeral[i].UltimaAlteracao
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

